<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323F5A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="GALERIA VIDEOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/botonGaleriaVideos"
        app:layout_constraintStart_toStartOf="@+id/botonGaleriaVideos"
        app:layout_constraintTop_toBottomOf="@+id/botonGaleriaVideos" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIDEO"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/botonVideo"
        app:layout_constraintStart_toStartOf="@+id/botonVideo"
        app:layout_constraintTop_toBottomOf="@+id/botonVideo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="GALERIA FOTOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/botonGaleriaFotos"
        app:layout_constraintStart_toStartOf="@+id/botonGaleriaFotos"
        app:layout_constraintTop_toBottomOf="@+id/botonGaleriaFotos" />

    <ImageView
        android:id="@+id/botonCamara"
        android:layout_width="118dp"
        android:layout_height="143dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_camara"
        android:onClick="tomarFoto"/>

    <ImageView
        android:id="@+id/botonVideo"
        android:layout_width="113dp"
        android:layout_height="145dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_video"
        android:onClick="tomarVideo"/>

    <ImageView
        android:id="@+id/botonGaleriaFotos"
        android:layout_width="112dp"
        android:layout_height="126dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="256dp"
        android:onClick="galeriaFotos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icono_galeria" />

    <ImageView
        android:id="@+id/botonGaleriaVideos"
        android:layout_width="108dp"
        android:layout_height="123dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="256dp"
        android:onClick="galeriaVideos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icono_galeria_video" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAMARA"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/botonCamara"
        app:layout_constraintStart_toStartOf="@+id/botonCamara"
        app:layout_constraintTop_toBottomOf="@+id/botonCamara" />

    <ImageView
        android:id="@+id/botonReproductorMusica"
        android:layout_width="108dp"
        android:layout_height="123dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="56dp"
        android:onClick="galeriaVideos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icono_musica" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MUSICA"
        android:textColor="#FFFFFF"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonReproductorMusica" />
</androidx.constraintlayout.widget.ConstraintLayout>